{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "bash": {
      "*": "allow",
      "git add *": "ask",
      "git commit *": "ask",
      "git push *": "ask",
      "git reset *": "ask",
      "git rebase *": "ask",
      "git merge *": "ask",
      "git stash *": "ask",
      "git cherry-pick *": "ask",
      "git tag *": "ask",
      "git branch -d *": "ask",
      "git branch -D *": "ask",
      "git branch -m *": "ask"
    }
  }
}
